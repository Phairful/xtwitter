<!DOCTYPE html>
<html>
  <head>
    <title>Xwitter</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>

  </head>


<nav class="navbar navbar-expand-lg bg-body-tertiary">
  <div class="container-fluid">
    <a class="navbar-brand" href="#"><i class="fa-brands fa-square-x-twitter"></i>Xwitter</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="<%= root_path %>">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="<%= root_path %>">User</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="<%= root_path %>">Tweets</a>
        </li>
      </ul>
    </div>
    <% if user_signed_in? %>
      <div class="navbar-nav ml-auto"> 
            <a href="<%= user_path(current_user) %>" class="btn btn-primary mr-1">
          <i class="far fa-user"></i>@<%= current_user.username %>
        </a>
        <span>
        <%= button_to "Log Out", destroy_user_session_path, method: :delete, class: 'btn btn-outline-danger' %>
      </div>
    <% else %>
      <div class="navbar-nav ml-auto">
        <%= link_to "Log In", new_user_session_path, class: 'btn btn-outline-primary mr-1' %><span>
        <%= link_to "Sign Up", new_user_registration_path, class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</nav>



<div class="container-sm">
<br>
  <body>
    <%= yield %>
  </body>
</div>
</html>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>