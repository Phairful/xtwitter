<h1>Editing tweet</h1>

<%= form_with(model: @tweet, local: true, html: { class: 'my-4' }) do |form| %>
  <% if @tweet.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(@tweet.errors.count, "error") %> prohibited this tweet from being saved:</h2>

      <ul>
        <% @tweet.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :tweet_body %>
    <%= form.text_area :tweet_body, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit %>
  </div>
<% end %>

<div class="mt-3">
  <%= link_to "Show this tweet", @tweet, class: 'btn btn-secondary mr-2' %> |
  <%= link_to "Back to tweets", tweet_path, class: 'btn btn-secondary' %>
</div>


