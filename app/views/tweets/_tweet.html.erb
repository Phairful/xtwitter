<div id="<%= dom_id tweet %>" class="tweet">
  <div class="container-sm">
    <div class="tweet-header">
      <%= link_to tweet.user.display_name, user_path(tweet.user), method: :get, class: 'fw-bolder' %>
      <br>
      <%= link_to "@#{tweet.user.username}", user_path(tweet.user),  method: :get, class: 'fw-medium' %>
    </div>
    <div class="tweet-body overflow-hidden text-truncate fw-normal">
      <%= tweet.tweet_body %>
    </div>
    <% if tweet.reply_at_tweet_id.present? %>
      <div class="tweet-footer">
        <%= link_to "View Original Tweet", tweet_path(tweet.reply_at_tweet_id) %>
      </div>
          
    <% end %>
    <div class="tweet-timestamp fw-lighter">
      Created: <%= tweet.created_at.strftime("%B %d, %Y %I:%M %p") %>
    </div>
    <br>
      <div class="tweet-stats fw-lighter">
      <span><i class="fas fa-retweet"></i> <%= Tweet.retweet_count(tweet.id) %></span>
      <span><i class="far fa-heart"></i> <%= Tweet.likes_count(tweet.id) %></span>
      <span><i class="fas fa-bookmark"></i> <%= Tweet.bookmarks_count(tweet.id) %></span>
    </div>
    <br>
    <div class="tweet-action text-left">
      <%= link_to "<i class='fa-solid fa-heart'></i>".html_safe, like_tweet_path(tweet), method: :post, class: 'btn btn-link' %>
      <%= link_to "<i class='fa-regular fa-heart'></i>".html_safe, unlike_tweet_path(tweet), method: :delete, class: 'btn btn-link' %>
      <%= link_to "<i class='fas fa-retweet'></i>".html_safe, retweet_tweet_path(tweet), method: :post, class: 'btn btn-link' %>
      <%= link_to "<i class='fas fa-bookmark'></i>".html_safe, bookmark_tweet_path(tweet), method: :post, class: 'btn btn-link' %>

      <%
=begin%>
 <%= link_to "<i class='fas fa-quote-right'></i>".html_safe, quote_tweet_path(tweet), class: 'btn btn-link' %>
      <%= link_to "<i class='fas fa-reply'></i>".html_safe, reply_tweet_path(tweet), class: 'btn btn-link' %> 
<%
=end%>
      <% if user_signed_in? && current_user == tweet.user %>
        <%= link_to "<i class='fas fa-trash-alt'></i>".html_safe, tweet, method: :delete, data: { confirm: "Are you sure you want to delete this tweet?" }, class: 'btn btn-link' %>
      <% end %>
    </div>
  </div>
</div>



