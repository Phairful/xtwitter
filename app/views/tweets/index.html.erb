<p style="color: green">
  <%= notice %>
</p>
  <% if user_signed_in? %>
    <%= form_with(model: Tweet.new, url: tweets_path) do |form| %>
      <%= form.text_area :tweet_body, placeholder: "What's happening?" %>
      <%= form.submit "Tweet" %>
      <% end %>
      <h2>Feed:</h2>
    <div id="tweets-container">
      <%= render @tweets %>
    </div>
  <% else %>
    <h2>Random Tweets:</h2>
    <div id="tweets-container">
      <%= render @tweets %>
    </div>
  <% end %>